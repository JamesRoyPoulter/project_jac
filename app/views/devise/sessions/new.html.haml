.new_login
  = render 'partials/errors', resource: resource

  %h1.logo
    = link_to image_tag('Ehxe_logo.png', id: 'ehxe_logo'), root_path

  = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

    .field#email_field
      = f.text_field :email, placeholder: "EMAIL", autofocus: true

    .field#password_field
      .password_field_tag
        = f.password_field :password, placeholder: "PASSWORD", autocomplete: 'off'
    .remember_me_div
      = f.check_box :remember_me
      = f.label :remember_me

    .actions.login
      = f.submit 'LOGIN', id: 'login_submit'

  = render "devise/shared/links"
