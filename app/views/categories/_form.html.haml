= form_for @category do |f|
  = render 'partials/errors', resource: @category

  .field
    = f.text_field :name, placeholder: ' Name'
  .field
    %select{name:'checkin[color]'}
      - Category.colors.each do |color|
        %option{value: color}
        %option{value: }
    = f.select :color, Category.colors

  .actions
    = f.submit 'Save'
