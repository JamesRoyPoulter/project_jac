= form_for @category do |f|
  = render 'partials/errors', resource: @category

  .field
    = f.text_field :name, placeholder: 'Name'
  .field
    .styled-select
      = f.select :color, Category.colors
    .marker
      = image_tag "https://s3-eu-west-1.amazonaws.com/ehxe/markers/#{@category.color}_marker.png",id:'marker'

  .actions
    = f.submit 'Save'
