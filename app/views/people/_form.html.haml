= form_for @person do |f|
  = render 'partials/errors', resource: @person

  .field#new_person_title
    = f.text_field :name, placeholder: "NEW PERSON NAME", id: "person_name"
    - if @person.picture
      = image_tag @person.picture, id: "edit_person_picture"

  .field#new_person_picture
    = f.file_field :picture
    .button
      Upload Image

  .actions.person
    = f.submit 'Save', id: "person_submit"
