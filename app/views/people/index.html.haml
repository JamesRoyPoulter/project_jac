.people_page
  .new_person_button
    = link_to 'NEW PERSON', new_person_path, id: "submit_new_person"

  - @people.each do |person|
    .people
      .title#people
        = person.name
      .person_image
        = render 'people/picture', person: person
      .options
        .button#person_icons
          = link_to image_tag('edit_icon.png', id: 'edit_icon_people'), edit_person_path(person)
          = link_to image_tag('x_icon_invert.png'), person, :method => :delete, :data => { :confirm => 'Are you sure?' }


