%ul
  - if current_user
    %li= link_to 'Dash', checkins_path
    %li{class: 'show_checkin_options'}
      %a{href:''} Checkin
    %li{class: 'checkin_link'}
      = link_to 'Now', new_checkin_path
    %li{class: 'checkin_link'}
      = link_to 'Past', past_checkin_path
    %li= link_to 'Categories', categories_path
    %li= link_to 'People', people_path
    %li= link_to 'Account', edit_user_path(current_user)
    %li= link_to 'Logout', session_path(session), method: :delete, data: {confirm: 'Are you sure?'}
  - else
    %li= link_to 'Sign up', new_user_path
    %li= link_to 'Login', sign_in_path
